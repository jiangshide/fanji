<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content"
        android:layout_marginTop="@dimen/content"
        android:text="首页默认显示"
        android:textColor="@color/gray"
        android:textSize="@dimen/normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="底部滑动"
            android:textColor="@color/fontLight"
            android:textSize="@dimen/normal"
            android:textStyle="bold" />

        <com.fanji.android.ui.FJSwitch
            android:id="@+id/switchBottomMove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checked="true"
            app:checkedColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="关注"
            android:textColor="@color/fontLight"
            android:textSize="@dimen/normal"
            android:textStyle="bold" />

        <com.fanji.android.ui.FJSwitch
            android:id="@+id/switchFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checked="false"
            app:checkedColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="推荐"
            android:textColor="@color/fontLight"
            android:textSize="@dimen/normal"
            android:textStyle="bold" />

        <com.fanji.android.ui.FJSwitch
            android:id="@+id/switchRecommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checked="true"
            app:checkedColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发现"
            android:textColor="@color/fontLight"
            android:textSize="@dimen/normal"
            android:textStyle="bold" />

        <com.fanji.android.ui.FJSwitch
            android:id="@+id/switchFind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checked="false"
            app:checkedColor="@color/blue" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content"
        android:layout_marginTop="@dimen/content"
        android:text="音乐动态默认主题"
        android:textColor="@color/gray"
        android:textSize="@dimen/normal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/content"
        >

        <TextView
            android:id="@+id/defaultAudioBgTips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="图片"
            android:textColor="@color/fontLight"
            android:textSize="@dimen/normal"
            android:textStyle="bold" />

        <com.fanji.android.ui.FJSwitch
            android:id="@+id/defaultAudioBgColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checked="true"
            app:checkedColor="@color/blue" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/defaultAudioBgImg"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="@dimen/content"
            android:background="@color/gray"
            android:scaleType="centerCrop"
            android:src="@color/blue" />

        <View
            android:id="@+id/defaultAudioLineColor"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/blueLight" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/content">

        <TextView
            android:id="@+id/defaultAudioLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="频谱颜色"
            android:enabled="false"
            android:textColor="@color/fontLight"
            android:textSize="@dimen/normal"
            android:textStyle="bold" />

        <com.fanji.android.ui.FJSwitch
            android:id="@+id/defaultAudioLineSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checked="false"
            app:checkedColor="@color/blue" />
    </LinearLayout>
</LinearLayout>