<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/content"
    tools:ignore="MissingConstraints">

    <com.fanji.android.ui.FJEditText
        android:id="@+id/nick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="手机号"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/font"
        android:textColorHint="@color/fontLight"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/big" />

    <com.fanji.android.ui.FJButton
        android:id="@+id/randomNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="随机昵称"
        android:textColor="@color/neutralGray"
        android:textSize="@dimen/small"
        app:layout_constraintBottom_toBottomOf="@+id/nick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nick" />
</androidx.constraintlayout.widget.ConstraintLayout>