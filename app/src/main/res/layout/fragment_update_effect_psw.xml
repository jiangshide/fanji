<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/content"
    tools:ignore="MissingConstraints">

    <com.fanji.android.ui.FJEditText
        android:id="@+id/psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content"
        android:hint="新密码"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/font"
        android:textColorHint="@color/fontLight"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/big"
        app:isDelete="false" />

    <com.fanji.android.ui.FJEditText
        android:id="@+id/rePsw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="确认新密码"
        android:paddingRight="100dp"
        app:layout_constraintTop_toBottomOf="@+id/psw"
        tools:layout_editor_absoluteX="16dp" />

    <com.fanji.android.ui.FJButton
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:padding="@dimen/content"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/bigSuper"
        app:layout_constraintTop_toBottomOf="@+id/rePsw"
        app:normal_color="@color/blue" />
</androidx.constraintlayout.widget.ConstraintLayout>