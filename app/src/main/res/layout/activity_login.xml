<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sweep"
    android:orientation="vertical"
    android:paddingTop="@dimen/topBar">

    <RelativeLayout
        android:id="@+id/userR"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <com.fanji.android.ui.FJImageView
            android:id="@+id/userIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userIcon"
            android:layout_centerHorizontal="true"
            android:text="梵记"
            android:textColor="@color/white"
            android:textSize="@dimen/normal"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appName"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:text="记录你的美好生活"
            android:textColor="@color/disable"
            android:textSize="@dimen/bigSuper"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:id="@+id/weiXinLoginL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.fanji.android.ui.FJButton
                android:id="@+id/weiXinLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/content"
                android:background="@color/alpha"
                android:drawableLeft="@mipmap/wechat"
                android:drawablePadding="@dimen/content"
                android:padding="@dimen/content"
                android:text="微信一键登录"
                android:textColor="@color/font"
                android:textSize="@dimen/bigSuper"
                android:textStyle="bold"
                app:normal_color="@color/blue" />

            <TextView
                android:id="@+id/phoneLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="手机号登录"
                android:textColor="@color/fontLight"
                android:textSize="@dimen/big"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneLoginL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/goWeiXinLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:drawableRight="@mipmap/arrow"
                android:drawableTint="@color/blueLight"
                android:text="微信登录"
                android:textColor="@color/blueLight"
                android:textSize="@dimen/big" />

            <RelativeLayout
                android:id="@+id/phoneLoginR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userIcon">

                <com.fanji.android.ui.FJEditText
                    android:id="@+id/phoneEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/view_border_bottom"
                    android:hint="请输入手机号码"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="70dp"
                    android:paddingTop="@dimen/content"
                    android:paddingRight="@dimen/content"
                    android:paddingBottom="@dimen/content"
                    android:textColor="@color/font"
                    android:textColorHint="@color/fontLight"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/big" />

                <com.fanji.android.ui.FJButton
                    android:id="@+id/phoneCodeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="+86"
                    android:textColor="@color/font"
                    android:textSize="@dimen/bigSuper"
                    app:corner="0dp"
                    app:normal_color="@color/blueLight" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/phoneCodeF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userSexL"
                android:layout_marginTop="35dp"
                android:visibility="visible">

                <com.fanji.android.ui.FJEditText
                    android:id="@+id/phoneCodeEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_border_bottom"
                    android:hint="请输入验证码"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:textColor="@color/font"
                    android:textColorHint="@color/fontLight"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/big"
                    app:isDelete="false" />

                <com.fanji.android.ui.FJTextView
                    android:id="@+id/phoneCodeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:drawableRight="@drawable/alpha"
                    android:text="获取验证码"
                    android:textColor="@color/line"
                    android:textSize="@dimen/big" />
            </FrameLayout>

            <TextView
                android:id="@+id/goPhonePswLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content"
                android:text="密码登录"
                android:textColor="@color/blueLight"
                android:textSize="@dimen/big" />

            <com.fanji.android.ui.FJButton
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:drawableLeft="@mipmap/phone"
                android:drawablePadding="@dimen/content"
                android:enabled="false"
                android:padding="@dimen/content"
                android:text="手机号登录"
                android:textColor="@color/white"
                android:textSize="@dimen/bigSuper"
                android:textStyle="bold"
                app:corner="@dimen/button"
                app:normal_color="@color/blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setPswL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/setPswPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content"
                android:text="18311271399"
                android:textColor="@color/disable"
                android:textSize="@dimen/bigSuper"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第一次登录需要设置您的登录密码"
                android:textColor="@color/disable"
                android:textSize="@dimen/normal" />

            <com.fanji.android.ui.FJEditText
                android:id="@+id/phonePsw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/view_border_bottom"
                android:hint="请设置您的密码..."
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textColor="@color/font"
                android:textColorHint="@color/fontLight"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/big"
                app:isDelete="false" />

            <com.fanji.android.ui.FJEditText
                android:id="@+id/phoneRePsw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/view_border_bottom"
                android:hint="再次设置您的密码..."
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textColor="@color/font"
                android:textColorHint="@color/fontLight"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/big"
                app:isDelete="false" />

            <TextView
                android:id="@+id/phoneRePswTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码不一致!"
                android:textColor="@color/redLight"
                android:textSize="@dimen/small"
                android:visibility="gone" />

            <com.fanji.android.ui.FJButton
                android:id="@+id/sureLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawablePadding="@dimen/content"
                android:enabled="false"
                android:padding="@dimen/content"
                android:text="确认登录"
                android:textColor="@color/fontLight"
                android:textSize="@dimen/bigSuper"
                android:textStyle="bold"
                app:corner="@dimen/button"
                app:normal_color="@color/disable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content"
                android:text="此处设置的密码可以用于直接登录"
                android:textColor="@color/disable"
                android:textSize="@dimen/normal" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录既代表同意 "
            android:textColor="@color/disable"
            android:textSize="@dimen/normal" />

        <TextView
            android:id="@+id/protocolUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 用户协议 "
            android:textColor="@color/blue"
            android:textSize="@dimen/normal"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 和 "
            android:textColor="@color/disable"
            android:textSize="@dimen/normal" />

        <TextView
            android:id="@+id/protocolPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 隐私政策"
            android:textColor="@color/blue"
            android:textSize="@dimen/normal"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>