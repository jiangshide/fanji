<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints"
    android:padding="@dimen/content"
    >

    <com.fanji.android.ui.FJCircleImg
        android:id="@+id/fileItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/default_user" />

    <TextView
        android:id="@+id/fileItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content"
        android:text="AAA.jpg"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/fileItemIcon" />

    <TextView
        android:id="@+id/fileItemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content"
        android:text="2013-08-08 11:00"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBottomOf="@+id/fileItemIcon"
        app:layout_constraintLeft_toRightOf="@+id/fileItemIcon" />

    <TextView
        android:id="@+id/fileItemSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content"
        android:text="0.01M"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBottomOf="@+id/fileItemIcon"
        app:layout_constraintLeft_toRightOf="@+id/fileItemTime" />

    <CheckBox
        android:id="@+id/fileItemChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>