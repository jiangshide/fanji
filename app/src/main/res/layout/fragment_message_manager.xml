<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <com.fanji.android.ui.FJTabLayout
        android:id="@+id/messageTab"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        />

    <com.fanji.android.ui.FJViewPager
        android:id="@+id/messageViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content"
        app:layout_constraintTop_toBottomOf="@+id/messageTab" />
</androidx.constraintlayout.widget.ConstraintLayout>