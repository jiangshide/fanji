<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/topBar"
    android:background="@drawable/bg_sweep"
    android:orientation="vertical">

    <com.fanji.android.ui.FJRecycleView
        android:id="@+id/usesSelectedRecycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <com.fanji.android.ui.FJEditText
        android:id="@+id/usesEdit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/usesSelectedRecycleView"
        android:layout_margin="@dimen/content"
        android:drawableLeft="@mipmap/search"
        android:drawablePadding="@dimen/content"
        android:hint="关键字..."
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:padding="@dimen/content"
        android:textColor="@color/font"
        android:textColorHint="@color/fontLight"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/normal"
        app:corners="90dp"
        app:isDelete="true" />

    <com.fanji.android.ui.FJRecycleView
        android:id="@+id/usesRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/usesEdit"
        android:orientation="vertical" />

</RelativeLayout>