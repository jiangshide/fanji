<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tipsL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <com.fanji.android.ui.FJLoading
        android:id="@+id/tipsLoading"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/tipsFalseL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tipsImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/no_net" />

        <TextView
            android:id="@+id/tipsDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="You are lost!"
            android:textColor="@color/font"
            android:textSize="@dimen/normal" />

        <com.fanji.android.ui.FJButton
            android:id="@+id/tipsRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingTop="5dp"
            android:paddingRight="50dp"
            android:paddingBottom="7dp"
            android:text="@string/refresh"
            android:textColor="@color/blue"
            android:textSize="@dimen/big"
            android:textStyle="bold"
            android:visibility="visible"
            app:corner="90dp"
            app:normal_color="@color/blackLightMiddle" />
    </LinearLayout>
</RelativeLayout>