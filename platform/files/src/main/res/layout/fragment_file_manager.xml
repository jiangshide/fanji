<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.fanji.android.ui.FJTabLayout
        android:id="@+id/fileTab"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <com.fanji.android.ui.FJViewPager
        android:id="@+id/fileViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fileTab" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectedFileView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fileViewPager"
        android:layout_alignParentBottom="true" />
</RelativeLayout>